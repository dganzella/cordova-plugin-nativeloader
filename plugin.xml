<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="net.doismundos.cordova.nativeloader"
    version="1.0.0">

    <name>NativeLoaderPlugin</name>
    <description>Add a native spinner to your cordova application</description>
    <license>Apache 2.0</license>
    <keywords>native, spinner, loader</keywords>

    <platform name="android">
      <source-file src="src/android/net/doismundos/cordova/NativeLoaderPlugin.java"
        target-dir="src/net/doismundos/cordova/" />

      <config-file target="config.xml" parent="/*">
        <feature name="NativeLoaderPlugin">
          <param name="android-package" value="net.doismundos.cordova.NativeLoaderPlugin"/>
        </feature>
      </config-file>
      
	  <resource-file src="res/drawable/preloader.xml" target="res/drawable/preloader.xml" />
	  
	  <resource-file src="res/drawable/preloader1.png" target="res/drawable/preloader1.png" />
	  <resource-file src="res/drawable/preloader2.png" target="res/drawable/preloader2.png" />
	  <resource-file src="res/drawable/preloader3.png" target="res/drawable/preloader3.png" />
	  <resource-file src="res/drawable/preloader4.png" target="res/drawable/preloader4.png" />
	  <resource-file src="res/drawable/preloader5.png" target="res/drawable/preloader5.png" />
	  <resource-file src="res/drawable/preloader6.png" target="res/drawable/preloader6.png" />
	  <resource-file src="res/drawable/preloader7.png" target="res/drawable/preloader7.png" />
	  <resource-file src="res/drawable/preloader8.png" target="res/drawable/preloader8.png" />
	  <resource-file src="res/drawable/preloader9.png" target="res/drawable/preloader9.png" />
	  <resource-file src="res/drawable/preloader10.png" target="res/drawable/preloader10.png" />
	  <resource-file src="res/drawable/preloader11.png" target="res/drawable/preloader11.png" />
	  <resource-file src="res/drawable/preloader12.png" target="res/drawable/preloader12.png" />
    </platform>

    <platform name="ios">

      <header-file src="src/ios/NativeLoaderPlugin.h" />
      <source-file src="src/ios/NativeLoaderPlugin.m" />

      <config-file target="config.xml" parent="/*/plugins">
          <feature name="NativeLoaderPlugin">
              <param name="ios-package" value="NativeLoaderPlugin"/>
          </feature>
      </config-file>
    </platform>
</plugin>
